@{
    ViewData["Title"] = "Feature Books";
}
@*<link rel="stylesheet" href="~/css/homeindex.css" asp-append-version="true" />*@
@model Budget_CoolBooks.ViewModels.HomeViewModel

<div class="row">
    @*First Carousel Starts*@    
    <div class="col-md-4">
        <h1>All Books</h1>
        <div id="carousel1" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @foreach (var book in Model.Books)
                {
                    var active = book == Model.Books.First() ? "active" : "";
                    <div class="carousel-item @active">
                        <a href="@Url.Action("BookDetails", "Book", new { id = book.Id })">
                        <img src="@book.Imagepath" alt="@book.Title" style="width:100%; height:100%;">
                        </a>
                        <div class="carousel-caption d-none d-md-block" >
                            <h5>@book.Title</h5>
                            <p>@book.Description</p>
                        </div>
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#carousel1" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel1" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    @*First Carousel Ends*@
    @*Secound Carousel Starts*@    
    <div class="col-md-4">
        <h1>Most Reviewed Books</h1>
        <div id="carousel2" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @foreach (var book in Model.TopReviewedBooks)
                {
                    var active = book == Model.TopReviewedBooks.First() ? "active" : "";
                    <div class="carousel-item @active">
                        <a href="@Url.Action("BookDetails", "Book", new { id = book.Id })">
                        <img src="@book.Imagepath" alt="@book.Title" style="width:100%; height:100%;">
                        </a>
                        <div class="carousel-caption d-none d-md-block">
                            <h5>@book.Title</h5>
                            <p>@book.Description</p>                            
                        </div>
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#carousel2" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel2" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    @*Secound Carousel Ends*@
    @*Third Carousel Starts*@    
    <div class="col-md-4">
        <h1>Highest Rated Books</h1>
        <div id="carousel3" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @foreach (var book in Model.TopRatedBooks.Take(3))
                {
                    var active = book == Model.TopRatedBooks.First() ? "active" : "";
                    <div class="carousel-item @active">
                        <a href="@Url.Action("BookDetails", "Book", new { id = book.Id })">
                        <img src="@book.Imagepath" alt="@book.Title" style="width:100%; height:100%;">
                        </a>
                        <div class="carousel-caption d-none d-md-block">
                            <h5>@book.Title</h5>
                            <p>@book.Description</p>
                        </div>
                    </div>
                }
            </div>            
            <a class="carousel-control-prev" href="#carousel3" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel3" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    @*Third Carousel Ends*@
</div>
  