@{
    ViewData["Title"] = "Feature Books";
}
<link rel="stylesheet" href="~/css/homeindex.css" asp-append-version="true" />

@{
    int i = 0;
}


    <h2 style="text-align: center;"></h2>
    <div id="slider">
        <input type="radio" name="slider" id="slide1" checked>
        <input type="radio" name="slider" id="slide2">
        <input type="radio" name="slider" id="slide3">
 
        <div id="slides">
            <div id="overflow">
                <div class="inner">
                    @foreach (var book in (List<Book>)ViewBag.BookList)
                    {
                 
                        <div class="slide slide_1">
                            <div class="slide-content">
                                <h2>@book.Title</h2>                                
                                <form method="post" asp-controller="Book" asp-action="BookDetails">
                                <input type="hidden" name="id" value="@book.Id">
                                <button input="submit" style="background-color: transparent; border: none;"><img src=@book.Imagepath alt=@book.Title style="width: 125%; margin-right: auto; margin-left: auto;" /></button>
                                </form>
                            </div>                        
                        </div>                    
                    i++;
                    if (i == 3)
                    {
                        break;
                    }
                    }
                </div>
            </div>
        </div>
        <div id="controls">
            <label for="slide1"></label>
            <label for="slide2"></label>
            <label for="slide3"></label>
            
        </div>
        <div id="bullets">
            <label for="slide1"></label>
            <label for="slide2"></label>
            <label for="slide3"></label>
        </div>
    </div>
    

