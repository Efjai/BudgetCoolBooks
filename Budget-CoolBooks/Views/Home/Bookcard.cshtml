@{
    ViewData["Title"] = "Bookcard";
}
<link rel="stylesheet" href="~/css/bookcard.css" asp-append-version="true" />

<!-- HTML -->
@foreach (var book in (List<Book>)ViewBag.bookList)
{
    <div class="card">
        <!-- Title -->
        <h1>@book.Title</h1>
        <div class="infobox">
            <!-- Author -->
            <h2>Author:</h2>
            <div>
                <h4>@{
                        //@ViewBag.Author.Firstname;
                } </h4>
                <h4>@{
                        //@Author.Lastname
                }</h4>
            </div>
            <!-- Description -->
            <h2>Description:</h2>
            <h4>@{
                    @book.Description
                }</h4>
        </div>
        <!-- Imagepath -->
        <img src="@book.Imagepath" alt="" style="width: 15%; margin-right: auto; margin-left: auto;">
        <div class="infobox">
            <!-- Rating -->
            <h2><p class="ratingBAD">Rating: "1 / 5"</p></h2>
            <!-- Form or link to a  "Submit / Update / Delete" review page-->
            <h2><a class="review">(if)Submit / Update / Delete" Review</a></h2>
        </div>
    </div>
    ;
}
