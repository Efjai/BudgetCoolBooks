@{
    ViewData["Title"] = "Create new quote";
}
<link rel="stylesheet" href="~/css/quoteview.css" asp-append-version="true" />
@model Budget_CoolBooks.ViewModels.QuoteViewModel


<div class="quote-create-container">
    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
    <div id="dropdown-field"> 
        <form method="post" asp-controller="Quote" asp-action="InitialCreate">
                <select class="form-select" onchange="this.form.submit()" aria-label="Choose Author" name="authorId" id="genre-dropdown">
            <option selected>Choose author</option>
            @foreach (var author in Model.Authors)
            {
                <option value="@author.Id">@author.Firstname @author.Lastname </option>
            }
            </select>
        </form>
    </div>
    

</div>
</div>