@{
    Layout = "_Layout";
    ViewData["Title"] = "Reviews";
}

<section>
    <div class="row d-flex justify-content-center">
        <div class="col-md-10 col-xl-8 text-center">
            <h3 class="mb-4">Top 3 Reviews</h3>
        </div>
    </div>
    
    @foreach (var review in (List<Review>)ViewBag.reviewList)
        {
        <div class="row text-center d-flex align-items-stretch">
            <div class="col-md-4 mb-5 mb-md-0 d-flex align-items-stretch">
                <div class="card testimonial-card">
                    <div class="card-up" style="background-color: #9d789b;"></div>
                   @*<div class="avatar mx-auto bg-white">
                        <img src="BOOKIMAGEPATH"/>*@
                    @*<h3 class="mb-3">HEJDU @review.Book</h3>
                    </div>*@
                    <div class="card-body">
                        <h5 class="mb-5">TESTING@*@review.User*@</h5>
                        <hr />
                        <p class="dark-grey-text mt-4">Published: @review.Created</p>
                        <p class="dark-grey-text mt-4">
                            <i class="fas fa-quote-left pe-2"></i>@review.Text
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
</section>
